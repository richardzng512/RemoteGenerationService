# RemoteGenerationService Configuration
# Copy this file to .env and edit as needed

# Server
HOST=0.0.0.0
PORT=8100
DEBUG=false

# Service mode: "mock" or "real"
SERVICE_MODE=mock

# ComfyUI (used for real image/video generation)
COMFYUI_BASE_URL=http://localhost:8188

# Mock behavior
MOCK_LLM_DELAY_MIN=0.5
MOCK_LLM_DELAY_MAX=2.0
MOCK_IMAGE_DELAY_MIN=1.0
MOCK_IMAGE_DELAY_MAX=5.0
MOCK_VIDEO_DELAY_MIN=5.0
MOCK_VIDEO_DELAY_MAX=15.0
# Fraction of requests that return an error (0.0 to 1.0)
MOCK_ERROR_RATE=0.0

# File Transfer
# Mode: "http" (default) or "smb"
TRANSFER_MODE=http

# SMB settings (only needed if TRANSFER_MODE=smb)
SMB_SERVER=
SMB_SHARE=
SMB_USERNAME=
SMB_PASSWORD=
SMB_TARGET_PATH=/GeneratedFiles
